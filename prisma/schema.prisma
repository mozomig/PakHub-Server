generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  role      UserRole  @default(MEMBER)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  apps      AppUser[]

  @@map("users")
}

model App {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  stages    Stage[]
  users     AppUser[]
  logoId    String?   @map("logo_id")
  logo      File?     @relation("AppLogo", fields: [logoId], references: [id], onDelete: SetNull)

  @@map("apps")
}

model AppUser {
  id        String   @id @default(uuid())
  appId     String   @map("app_id")
  app       App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      AppRole  @default(MEMBER)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([appId, userId])
  @@map("app_users")
}

model Stage {
  id        String   @id @default(uuid())
  name      String
  appId     String   @map("app_id")
  app       App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  builds    Build[]

  @@index([appId])
  @@map("stages")
}

model Build {
  id           String  @id @default(uuid())
  version      String
  buildNumber  Int?    @map("build_number")
  releaseNotes String? @map("release_notes")
  stageId      String  @map("stage_id")
  stage        Stage   @relation(fields: [stageId], references: [id], onDelete: Cascade)

  fileId String? @map("file_id")
  file   File?   @relation(fields: [fileId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([stageId])
  @@map("builds")
}

model File {
  id        String    @id @default(uuid())
  type      FileType
  fileName  String    @map("file_name")
  fileSize  Int       @map("file_size")
  mimeType  String    @map("mime_type")
  metadata  Json?     @map("metadata")
  expiresAt DateTime? @map("expires_at")

  storageProvider StorageProvider @default(S3) @map("storage_provider")
  storagePath     String          @map("storage_path")
  storageBucket   String?         @map("storage_bucket")

  isPublic Boolean @default(false) @map("is_public")

  App   App[]   @relation("AppLogo")
  Build Build[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([expiresAt])
  @@map("files")
}

enum UserRole {
  CREATOR
  MEMBER
}

enum AppRole {
  ADMIN
  MEMBER
}

enum FileType {
  LOGO
  BUILDS
}

enum StorageProvider {
  S3
}
